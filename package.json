{
	"name": "templejs",
	"version": "0.2.0",
	"description": "Sensible templating for the modern browser.",
	"author": "Beneath the Ink <info@beneaththeink.com>",
	"contributors": [
		{
			"name": "Tyler Johnson",
			"email": "tyler@beneaththeink.com",
			"url": "http://github.com/tyler-johnson"
		} 
	],
	"repository": {
		"type" : "git",
  		"url" : "https://github.com/BeneathTheInk/Temple.js.git"
	},
	"main": "./lib/temple.js",
	"scripts": {
		"build-tests": "browserify --debug -o test/browser/tests.js test",
		"build-js": "browserify --insert-global-vars '__filename,__dirname' -s Temple -o dist/temple.js .",
		"build-min": "uglifyjs dist/temple.js -c warnings=false -m -o dist/temple.min.js",
		"build-dev": "browserify --debug -s Temple -o dist/temple.js .",
		"build": "mkdir -p dist && npm run build-js && npm run build-min",
		"test": "mocha -R spec"
	},
	"dependencies": {
		"hogan.js": "2.0.0",
		"underscore": "1.6.0"
	},
	"devDependencies": {
		"browserify": "3.44.2",
		"mocha": "1.18.2",
		"chai": "1.9.1",
		"browserify-pegjs": "0.8.0-2"
	},
	"browserify": {
		"transform": [ "browserify-pegjs" ]
	},
	"license": "MIT",
	"keywords": [
		"mustache",
		"DOM",
		"html",
		"template",
		"templating",
		"data binding",
		"binding",
		"declarative",
		"view model"
	]
}
